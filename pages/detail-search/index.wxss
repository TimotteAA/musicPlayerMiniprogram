/* pages/detail-search/index.wxss */

page {
    padding: 0 20rpx;
    padding-top: 100rpx;
}

.van-search {
    padding: 20rpx 0 !important;
}

.search {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    /* width: 100%; */
    padding-left: 20rpx;
    margin-right: 20rpx;
}

.van-search__content {
    background-color: #fff !important;
}

.tags {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.tag {
    font-size: 24rpx;
    width: fit-content;
    margin-right: 20rpx;
    margin-top: 15rpx;
    padding: 6rpx;
    border: 2px solid #fafafa;
    border-radius: 10rpx;
}

.tag:first-child {
    color: limegreen;
}

.list {
    display:flex;
    flex-direction: column;
}

.suggest .title {
    color: limegreen
}

.suggest-item {
    display: flex;
    align-items: center;    
    margin-top: 18rpx;
} 

.suggest-item .icon {
    width: 50rpx;
    object-fit: cover;
}

.suggest-item .keyword {
    font-size: 24rpx;
    font-weight: 600;
}

.search-result {
    margin-top: 20rpx;
}

.search-result .best-match {
    color: limegreen
}

.history-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.history-list .history-item {
    font-size: 24rpx;
    width: fit-content;
    margin-right: 20rpx;
    margin-top: 15rpx;
    padding: 6rpx;
    border: 2px solid #fafafa;
    border-radius: 10rpx;
    color: lightcoral;
}