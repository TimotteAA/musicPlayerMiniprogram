/* pages/more-albums/index.wxss */
page {
    padding: 20rpx;
}

.more-album-wrapper .top-wrapper {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    margin-top: 40rpx;
    height: 105vh;
}

.item-wrapper {
    margin-top: 20rpx;
    width: 45%;
    /* margin-right: 10rpx; */
}

.item-wrapper:nth-child(2n+1) {
    margin-left: 20rpx;
}

.item-wrapper:nth-child(2n+2) {
    margin-right: 20rpx;
}

.more-subwrapper:not(:first-child) {
    margin-top: 40rpx;
}

.more-subwrapper:last-child {
    margin-bottom: 40rpx;
}
