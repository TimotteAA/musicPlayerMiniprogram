<!--components/video-item-vedio1/index.wxml-->
<wxs src="../../utils/format.wxs" module="format"></wxs>

<view class="video-item">
            <view class="album">
                <image class="img" src="{{item.cover}}" mode="widthFix"></image>
                <view class="info">
                    <view class="count">
                        <view class="icon"></view>
                    {{format.formatCount(item.playCount)}}</view>
                    <view class="duration">{{format.formatDuration(item.mv.videos[0].duration)}}</view>
                </view>
            </view>
            <view class="content">
                {{item.name + "-" + item.artistName}}
            </view>
        </view>
