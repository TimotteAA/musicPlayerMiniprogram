/* components/bottom-player/index.wxss */

.bottom-player-wrapper {
    display: flex;
    height: 100%;
    /* width:100%; */
    /* background-color: black; */
    /* padding: 20rpx; */
    margin: 0 20rpx;
}

.bg-image {
    position: absolute;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    z-index: -999;
}

.bg-cover {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: -999;
    background-color: rgba(0,0,0,0.2);
    backdrop-filter: blur(20px);
}

.left {
    flex: 2;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.left .song-cover {
    width: 50%;
    border-radius: 6rpx;
}

.left .song-name {
    margin-top: 10rpx;
    text-align: center;
    overflow: hidden;
    color: white;
    font-size: 20rpx;
}

.right-operator {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex: 4;
    padding: 40rpx;
}

.right-operator .btn {
    width: 50rpx;
}

.right-operator .btn.btn-prev,
.right-operator .btn.btn-next {
    width: 20rpx;
}

.right-operator .btn.btn-pause {
    width: 40rpx;
}